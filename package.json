{
  "name": "in-memory-cache",
  "version": "0.0.1",
  "scripts": {
    "start": "ts-node ./lib/inMemoryCache.ts",
    "build": "tsc",
    "dev":"node ./dist/inMemoryCache.js",
    "test": "mocha --require ts-node/register --watch-extensions ts,tsx 'test/**/*.ts'",
    "lint": "npm-run-all lint:*",
    "lint:ts": "tslint \"{lib/**/*,test/**/*}.ts\" -p tsconfig.json",
    "lint:prettier": "prettier \"{lib/**/*,test/**/*}.ts\" --list-different",
    "fix": "npm-run-all fix:*",
    "fix:ts": "npm run lint:ts -- --fix",
    "fix:prettier": "prettier \"{lib/**/*,test/**/*}.ts\" --write"
  },
  "lint-staged": {
    "linters": {
      "{lib,test}/**/*.{js,ts,tsx}": [
        "prettier",
        "tslint -p tsconfig.json"
      ]
    }
  },
  "private": true,
  "pre-push": [
    "validate"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.3",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0"
  }
}
